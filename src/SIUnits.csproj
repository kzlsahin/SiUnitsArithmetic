<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageId>$(AssemblyName)Arithmetic</PackageId>
    <Title>SI Units Arithmetic</Title>
    <Authors>kzlsahin</Authors>
    <Product>$(AssemblyName)Arithmetic</Product>
    <Description>This package defines metric system units and provides related arithmetic operations.</Description>
    <Copyright>MIT License</Copyright>
    <Version>1.2.1.1</Version>
    <PackageProjectUrl></PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/kzlsahin/SiUnitsArithmetic</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <AssemblyVersion>1.2.1.1</AssemblyVersion>
    <RepositoryType>git</RepositoryType>
    <PackageTags>SI Units</PackageTags>
    <PackageReleaseNotes>- Derived unit coverage is added.
- Derived unit arithmetic is included
- Basic units may produce deerived units via arithmetic operations.
- cross unit operators are added without need to use explicit type conversion.
- Unit representation in strings is improved.</PackageReleaseNotes>
  <Configurations>Debug;Release</Configurations>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Benchmark|AnyCPU'">
    <Optimize>True</Optimize>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Length\Area\**" />
    <Compile Remove="Volume\**" />
    <EmbeddedResource Remove="Length\Area\**" />
    <EmbeddedResource Remove="Volume\**" />
    <None Remove="Length\Area\**" />
    <None Remove="Volume\**" />
  </ItemGroup>

  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
